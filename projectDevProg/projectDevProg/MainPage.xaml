<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projectDevProg.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image Grid.RowSpan="2" Source="https://images3.alphacoders.com/628/62857.jpg" Aspect="AspectFill" />

        <StackLayout Grid.Row="1" Margin="49,0">
            <Label Text="Pokemon" FontSize="Large" TextColor="DarkRed" />

            <ListView x:Name="lvwPokemon" SeparatorColor="White" ItemSelected="lvwPokemon_ItemSelected">
                <!--f12-->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <TextBlock Text="Name: " />
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                            <TextBlock Text=", " />
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </Grid>
</ContentPage>
