<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projectDevProg.MainPage">
    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Aspect="AspectFill" Source="https://images4.alphacoders.com/728/728240.png"></Image>
            <BoxView Grid.Row="1" BackgroundColor="SteelBlue"/>
            <Grid Grid.Row="2" RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Frame x:Name="frmPokedex" Grid.Row="0" Padding="0" Margin="1" BorderColor="SteelBlue">
                    <Label Text="Pokedex" TextColor="SteelBlue" FontAttributes="Bold" VerticalOptions="Center" Margin="16,0"/>
                </Frame>
                <Frame x:Name="frmFilter" Grid.Row="1" Padding="0" Margin="1" BorderColor="SteelBlue">
                    <Label Text="Filter Pokemons" TextColor="SteelBlue" FontAttributes="Bold" VerticalOptions="Center" Margin="16,0"/>
                </Frame>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
