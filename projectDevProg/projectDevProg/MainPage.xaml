<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projectDevProg.MainPage">

    <ListView Margin="8" x:Name="lvwPokemon" RowHeight="250">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Frame Margin="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Image x:Name="imgPokemon" HeightRequest="100" WidthRequest="100" Source="https://cdn.bulbagarden.net/upload/2/21/001Bulbasaur.png" Grid.RowSpan="3" HorizontalOptions="Start" VerticalOptions="Center"/>
                            <Label Text="{Binding Name}" Grid.Row="1" HorizontalOptions="Center" FontSize="Large"/>
                            <Label Text="{Binding Id}" Grid.Row="1" HorizontalOptions="End" FontSize="Large"/>
                            <Label Text="{Binding Form}" FontSize="Micro" Grid.Row="2" HorizontalOptions="Center" />
                        </Grid>
                    </Frame>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
